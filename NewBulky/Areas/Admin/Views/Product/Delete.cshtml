@model Bulky.Models.Product

<form method="post">
    <fieldset>
        <legend>Delete Product</legend>

        <input asp-for="Id" hidden />

        <div class="row">
            <label asp-for="Title" class="form-label mt-4"></label>
            <input class="form-control" id="Title" disabled asp-for="Title" aria-describedby="NameHelp" placeholder="Enter Product Name">
        </div>
        <div class="row">
            <label asp-for="Description" class="form-label mt-4"></label>
            <input class="form-control" id="Description" disabled asp-for="Description" aria-describedby="DisplayOrderHelp" placeholder="Enter Description">
        </div>
        <div class="row">
            <label asp-for="ISBN" class="form-label mt-4"></label>
            <input class="form-control" id="ISBN" disabled asp-for="ISBN" aria-describedby="DisplayOrderHelp" placeholder="Enter ISBN">
        </div>
        <div class="row">
            <label asp-for="Author" class="form-label mt-4"></label>
            <input class="form-control" id="Author" disabled asp-for="Author" aria-describedby="DisplayOrderHelp" placeholder="Enter Author Name">
        </div>
        <div class="row">
            <label asp-for="Price" class="form-label mt-4"></label>
            <input class="form-control" id="Price" disabled asp-for="Price" aria-describedby="DisplayOrderHelp" placeholder="Enter Price">
        </div>
        <div class="row">
            <label asp-for="ListPrice" class="form-label mt-4"></label>
            <input class="form-control" id="ListPrice" disabled asp-for="ListPrice" aria-describedby="DisplayOrderHelp" placeholder="Enter Price for 1-50 Products">
        </div>
        <div class="row">
            <label asp-for="Price50" class="form-label mt-4"></label>
            <input class="form-control" id="Price50" disabled asp-for="Price50" aria-describedby="DisplayOrderHelp" placeholder="Enter Price for 50+ Products">
        </div>
        <div class="row">
            <label asp-for="Price100" class="form-label mt-4"></label>
            <input class="form-control" id="Price100" disabled asp-for="Price100" aria-describedby="DisplayOrderHelp" placeholder="Enter Price for 100+ Products">
        </div>

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Product</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </fieldset>
</form>

