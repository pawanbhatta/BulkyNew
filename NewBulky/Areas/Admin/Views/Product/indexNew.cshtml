@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" id="tblData">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Category
            </th>
            <th>
                Description
            </th>
            <th>
                ISBN
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>

</table>

@section Scripts {
    <script src="~/js/product.js"></script>
}