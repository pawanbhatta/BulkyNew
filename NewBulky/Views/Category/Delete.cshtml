@model Bulky.Models.Category

<form method="post">
    <fieldset>
        <legend>Delete Category</legend>

        <input asp-for="Id" hidden />

        <div class="row">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input class="form-control" id="Name" asp-for="Name" disabled aria-describedby="NameHelp" placeholder="Enter Category Name">
        </div>
        <div class="row">
            <label asp-for="DisplayOrder" class="form-label mt-4"></label>
            <input class="form-control" id="DisplayOrder" disabled asp-for="DisplayOrder" aria-describedby="DisplayOrderHelp" placeholder="Enter Display Order">
        </div>

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Category</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </fieldset>
</form>

